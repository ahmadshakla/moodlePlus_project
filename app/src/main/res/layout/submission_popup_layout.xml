<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/blue_with_white_border">

    <TextView
        android:id="@+id/submissionPopupStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_with_white_border"
        android:gravity="center"
        android:padding="13dp"
        android:text="Status: "
        android:textColor="#1C1818"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/submissionPopuoGrade"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_with_white_border"
        android:gravity="center"
        android:padding="13dp"
        android:text="Grade: "

        android:textColor="#1C1818"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/submissionPopupStatus" />

    <TextView
        android:id="@+id/submissionPopupFeedback"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_with_white_border"
        android:gravity="center"
        android:padding="13dp"
        android:text="Feedback: "
        android:textColor="#1C1818"

        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/submissionPopupDownload"
        app:layout_constraintTop_toBottomOf="@+id/submissionPopuoGrade" />

    <ImageView
        android:id="@+id/submissionPopupDownload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:drawable/stat_sys_download"
        android:backgroundTint="@color/colorPrimary"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/submissionPopuoGrade"
 />
</androidx.constraintlayout.widget.ConstraintLayout>