<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <org.sufficientlysecure.htmltextview.HtmlTextView
        android:id="@+id/postTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_with_white_border"
        android:padding="10dp"
        android:textColorLink="#1C2E4A"
        app:layout_constraintEnd_toStartOf="@+id/replyToPostImageview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/postTitleTextView" />

    <TextView
        android:id="@+id/postWriterTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/round"
        android:padding="10dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/postTitleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_with_white_border"
        android:padding="10dp"
        android:textColor="#272121"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/postWriterTextView" />

    <View
        android:id="@+id/viewHbd"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="#D3D3D3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/postTextView" />

    <ImageView
        android:id="@+id/replyToPostImageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@+id/viewHbd"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_reply_black_24dp" />


</androidx.constraintlayout.widget.ConstraintLayout>