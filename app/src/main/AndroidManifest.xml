<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.postPc.moodlePlus">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name="com.postPc.moodlePlus.MoodleApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_icon1"
        android:label="Moodle+"
        android:roundIcon="@mipmap/ic_icon1_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:label">
        <activity android:name="com.postPc.moodlePlus.UserLoginActivity"></activity>
        <activity android:name="com.postPc.moodlePlus.CourseInformation.AssignmentSubmissions.AssignmentStatusActivity" />
        <activity android:name="com.postPc.moodlePlus.CourseInformation.AssignmentSubmissions.AssignmentSubmissionActivity" />
        <activity android:name="com.postPc.moodlePlus.CourseInformation.CourseFolderViewActivity" />
        <activity android:name="com.postPc.moodlePlus.CourseInformation.CourseEvents.CourseEventsActivity" />
        <activity android:name="com.postPc.moodlePlus.CourseInformation.CourseForums.ReplyToPostActivity" />
        <activity android:name="com.postPc.moodlePlus.CourseInformation.CourseForums.AddDiscussionActivity" />
        <activity android:name="com.postPc.moodlePlus.CourseInformation.CourseForums.DiscussionPostsActivity" />
        <activity android:name="com.postPc.moodlePlus.CourseInformation.CourseForums.ForumViewActivity" />
        <activity android:name="com.postPc.moodlePlus.CalenderData.CalenderViewActivity" />
        <activity android:name="com.postPc.moodlePlus.CourseInformation.CourseGrades.GradesInfoActivity" />
        <activity
            android:name="com.postPc.moodlePlus.CourseInformation.CourseInfoActivity"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name="com.postPc.moodlePlus.MainMenu.CoursesMenuActivity"
            tools:ignore="InnerclassSeparator" />
        <activity android:name="com.postPc.moodlePlus.MainActivity">
            <intent-filter tools:ignore="ExtraText">
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>